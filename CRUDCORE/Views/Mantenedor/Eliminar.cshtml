@model ContactoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<div class="card">
    <div class="card-header">
        Eliminar Contacto
    </div>
    <div class="card-body">
        <!--se copia de bootstrap(form bootstrap)-->
        <!--asp-for = llama al campo de ContactoModel-->
        <form asp-action="Eliminar" asp-controller="Mantenedor" method="post">

            <input asp-for="IdContacto" type="hidden" class="form-control">
          
            <div class="alert alert-danger" role="alert">
                Desea Eliminar el contacto : @Html.DisplayTextFor(m => m.Nombre) ?
            </div>

            <button type="submit" class="btn btn-danger">Eliminar</button>

            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Vover a la lista</a>

        </form>
    </div>
</div>